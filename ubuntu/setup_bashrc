echo 'Ubuntu側のSetup開始'
export HOME=/home/android
#[[ -f /etc/apt/sources.list ]] && sed -Ei 's@https?\://ports\.ubuntu\.com/ubuntu\-ports/@http://ftp.yz.yamagata-u.ac.jp/pub/linux/ubuntu/archives/@g' /etc/apt/sources.list 
